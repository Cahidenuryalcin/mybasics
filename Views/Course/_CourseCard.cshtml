@model Course
<div class="card -3" id="@Model.Id">
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/@Model.Image" width="200 " alt="" class="img-fluid rounded-start">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <p>@Model.Title</p>
                </h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
</div>